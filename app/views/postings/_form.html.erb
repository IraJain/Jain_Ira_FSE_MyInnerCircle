<%= form_for(@posting, :class => "form-horizontal") do |f| %>

  <% if @posting.errors.any? %>
    <div id="error_explanation">
      <h2> Errors while saving:</h2>

      <ul>
      <% @posting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="container-fluid">

      <div class="field">
    <div class="row-fluid">

      <div class="span4" >
       <h5> Title*  </h5>
       </div>

      <div class="span7 " >
        <%= f.text_field :title, :class=>"input-xxlarge"  %>
      </div>

    </div>


      <div class="row-fluid">

        <div class="span4" >
        <h5>Description*  </h5>
        </div>

        <div class="span7" >
          <%= f.text_area :description, rows: 10,:class=>"input-xxlarge"  %>
        </div>

      </div>


      <div class="row-fluid">

        <div class="span4" >
          <%= f.label :phone %>
        </div>

        <div class="span7 " >
          <%= f.number_field :phone %>
        </div>

      </div>


        <div class="row-fluid">

          <div class="span4" >
            <%= f.label :location %>
          </div>

          <div class="span7 " >
            <%= f.text_field :location %>
          </div>

        </div>
   </div>


   <div class="actions">

     <div class="row-fluid">

       <div class="span4" >  </div>
       <div class ="span7">
         <br/>
        <%= f.submit %>
       </div>

     </div>

   </div>
</div>

<% end %>





