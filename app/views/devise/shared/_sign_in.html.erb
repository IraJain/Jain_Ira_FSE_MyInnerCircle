
<!-- Sign in form for the main page -->

<div class="container-fluid">
  <div class="row-fluid">

    <div class="span6 left">
      <h1>MyInnerCircle</h1>
    </div>

    <div class="span6">
      <%= form_for(resource,:as => resource_name, :url => session_path(resource_name),:html => {:class => "form-inline"}) do |f| %>

          <%= f.email_field :email,:id =>'SignIn_email', :autofocus => true, :class=>"input-medium", :placeholder => "Enter Email Id" %>
          <%= f.password_field :password,:id =>'SignIn_password', :class=>"input-medium", :placeholder => "Password" %>
          <%= f.submit "Sign in", :id =>'Sign in',:class=> "btn btn-primary" %> <br />



     <% end %>
    </div>

  </div>
</div>





